<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_CONNECTED_DEVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.READ_LOGS" 
                     tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
    
    <!-- Permessi per file multimediali -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" 
                     android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
                     android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" />

    <queries>
        <intent>
            <action android:name="android.media.action.IMAGE_CAPTURE" />
        </intent>
    </queries>

    <application
        android:name=".ShutAppChatApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TestShutApp"
        android:usesCleartextTraffic="true">
        
        <activity
            android:name=".AuthActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TestShutApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
            
        <activity
            android:name=".HomepageActivity"
            android:exported="false"
            android:theme="@style/Theme.TestShutApp.NoActionBar" />
            
        <activity
            android:name=".ChatActivity"
            android:exported="false"
            android:parentActivityName=".HomepageActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/Theme.TestShutApp" />
            
        <activity
            android:name=".MediaViewerActivity"
            android:exported="false"
            android:parentActivityName=".ChatActivity"
            android:theme="@style/Theme.TestShutApp.NoActionBar" />
            
        <activity
            android:name=".FindUserActivity"
            android:exported="false"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/Theme.TestShutApp" />
            
        <activity
            android:name=".MyContactsActivity"
            android:exported="false"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/Theme.TestShutApp" />
            
        <activity
            android:name=".RequestsPendingActivity"
            android:exported="false"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/Theme.TestShutApp" />
            
        <activity
            android:name=".ContactRequestsActivity"
            android:exported="false"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/Theme.TestShutApp" />
            
        <activity
            android:name=".MyProfileActivity"
            android:exported="false"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/Theme.TestShutApp" />

        <activity
            android:name=".ProfileImageEditorActivity"
            android:exported="false"
            android:label="@string/profile_editor_title"
            android:parentActivityName=".MyProfileActivity"
            android:theme="@style/Theme.TestShutApp.NoActionBar" />
        
        <activity
            android:name=".ImageAttachmentEditorActivity"
            android:exported="false"
            android:label="Modifica Immagine"
            android:theme="@style/Theme.TestShutApp.NoActionBar" />
            
        <activity
            android:name=".PrivacySettingsActivity"
            android:exported="false"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/Theme.TestShutApp" />
        
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/Theme.TestShutApp" />
            
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:parentActivityName=".AuthActivity"
            android:theme="@style/Theme.TestShutApp" />
        
        <!-- ✅ Activities per i gruppi -->
        <activity
            android:name=".CreateGroupActivity"
            android:exported="false"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/Theme.TestShutApp" />
        
        <activity
            android:name=".GroupSettingsActivity"
            android:exported="false"
            android:parentActivityName=".ChatActivity"
            android:theme="@style/Theme.TestShutApp" />
        
        <activity
            android:name=".GroupMembersActivity"
            android:exported="false"
            android:parentActivityName=".GroupSettingsActivity"
            android:theme="@style/Theme.TestShutApp" />
        
        <!-- ✅ Nuove Activities per UI Gruppi completa -->
        <activity
            android:name=".GroupChatActivity"
            android:exported="false"
            android:parentActivityName=".HomepageActivity"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/Theme.TestShutApp.NoActionBar" />
        
        <activity
            android:name=".GroupSettingsActivityNew"
            android:exported="false"
            android:parentActivityName=".GroupChatActivity"
            android:theme="@style/Theme.TestShutApp" />

        <!-- ✅ Activity per Notifiche di Sistema (read-only) -->
        <activity
            android:name=".SystemNotificationsActivity"
            android:exported="false"
            android:parentActivityName=".HomepageActivity"
            android:theme="@style/Theme.TestShutApp.NoActionBar" />

        <service
            android:name=".services.WebSocketService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="dataSync" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>