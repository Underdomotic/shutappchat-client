<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- Icona menu 3 puntini -->
    <ImageView
        android:id="@+id/imageViewMessageMenu"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_marginEnd="4dp"
    android:padding="6dp"
        android:src="@android:drawable/ic_menu_more"
        android:contentDescription="Menu messaggio"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toStartOf="@id/cardViewMessageSent"
        app:layout_constraintTop_toTopOf="@id/cardViewMessageSent"
        app:layout_constraintBottom_toBottomOf="@id/cardViewMessageSent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewMessageSent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="64dp"
        app:cardBackgroundColor="@color/message_sent_background"
        app:cardCornerRadius="12dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minWidth="220dp"
            android:padding="10dp">

            <!-- ✅ Messaggio quotato (reply) -->
            <include
                android:id="@+id/quotedMessageContainer"
                layout="@layout/quoted_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/imageViewAttachmentSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:adjustViewBounds="true"
                android:visibility="gone"
                tools:srcCompat="@tools:sample/backgrounds/scenic"
                tools:visibility="visible"
                android:contentDescription="Allegato Inviato" />

            <TextView
                android:id="@+id/textViewMessageContentSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="260dp"
                android:textColor="@color/message_sent_text"
                android:textSize="16sp"
                tools:text="Questo è un messaggio inviato di esempio." />

            <TextView
                android:id="@+id/textViewMessageTimestampSent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="4dp"
                android:textColor="@color/message_timestamp"
                android:textSize="11sp"
                tools:text="10:00" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="2dp">

                <ImageView
                    android:id="@+id/imageViewMessageStatus"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="4dp"
                    android:contentDescription="Message Status"
                    android:src="@drawable/ic_message_sent"
                    android:tint="@color/message_timestamp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>