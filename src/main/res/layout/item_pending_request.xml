<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Avatar del richiedente with online status -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/avatarContainer"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivRequestAvatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:src="@drawable/ic_person_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Online status indicator -->
        <View
            android:id="@+id/onlineStatusIndicator"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:background="@drawable/online_status_background"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/ivRequestAvatar"
            app:layout_constraintBottom_toBottomOf="@+id/ivRequestAvatar"
            app:layout_constraintStart_toStartOf="@+id/ivRequestAvatar"
            app:layout_constraintTop_toTopOf="@+id/ivRequestAvatar"
            app:layout_constraintHorizontal_bias="0.85"
            app:layout_constraintVertical_bias="0.85" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Nome del richiedente -->
    <TextView
        android:id="@+id/tvRequestName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintEnd_toStartOf="@+id/tvRequestTime"
        app:layout_constraintStart_toEndOf="@+id/avatarContainer"
        app:layout_constraintTop_toTopOf="@+id/avatarContainer"
        tools:text="Mario Rossi" />

    <!-- Orario richiesta -->
    <TextView
        android:id="@+id/tvRequestTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvRequestName"
        tools:text="10:30" />

    <!-- Messaggio della richiesta -->
    <TextView
        android:id="@+id/tvRequestMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatarContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestName"
        tools:text="Ciao! Vorrei aggiungerti ai miei contatti." />

    <!-- Bottoni di risposta -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/avatarContainer"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestMessage">

        <Button
            android:id="@+id/btnDecline"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Rifiuta"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/btnAccept"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accetta"
            android:textColor="@android:color/holo_green_dark" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>