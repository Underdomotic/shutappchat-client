<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Fullscreen Image Editor -->
    <FrameLayout
        android:id="@+id/frameImageEditor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <it.fabiodirauso.shutappchat.ui.ZoomCropImageView
            android:id="@+id/cropImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Image to send" />

        <it.fabiodirauso.shutappchat.ui.DrawingCanvasView
            android:id="@+id/drawingCanvas"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>


    <!-- Top Toolbar - Uniform background, always on top -->
    <LinearLayout
        android:id="@+id/topBarContainer"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="top"
        android:orientation="horizontal"
    android:background="@color/black"
        android:elevation="12dp"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
    >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonBack"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Chiudi"
            app:icon="@android:drawable/ic_menu_close_clear_cancel"
            app:iconTint="@android:color/white"
            app:iconSize="24dp"
            android:backgroundTint="@color/primary"
            android:stateListAnimator="@null" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Modifica Immagine"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center" />

    </LinearLayout>

    <!-- Bottom Action Toolbar - Floating Card - Ingrandita del 50% -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        app:cardElevation="8dp"
        app:cardCornerRadius="24dp"
        app:cardBackgroundColor="#CC000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAddEmoji"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Emoji"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:icon="@android:drawable/btn_star_big_on"
                app:iconTint="#FFD700"
                app:iconSize="32dp"
                app:iconGravity="top" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonAddText"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Testo"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:icon="@android:drawable/ic_menu_edit"
                app:iconTint="@android:color/white"
                app:iconSize="32dp"
                app:iconGravity="top" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonUndo"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Annulla"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:icon="@android:drawable/ic_menu_revert"
                app:iconTint="#FF6B6B"
                app:iconSize="32dp"
                app:iconGravity="top" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDone"
                style="@style/Widget.Material3.Button.TextButton.Icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Invia"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:icon="@android:drawable/ic_menu_send"
                app:iconTint="#4CAF50"
                app:iconSize="32dp"
                app:iconGravity="top" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
