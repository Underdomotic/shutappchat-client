<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quotedMessageContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#E8E8E8"
    android:layout_marginBottom="8dp"
    android:visibility="gone">

    <!-- Barra verticale colorata -->
    <View
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="#2196F3"
        android:layout_marginEnd="8dp" />

    <!-- Contenuto del messaggio quotato -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewQuotedSenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Mittente"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/textViewQuotedContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Contenuto messaggio quotato..."
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#666666" />
    </LinearLayout>

</LinearLayout>
