<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/replyPreviewContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#F0F0F0"
    android:visibility="gone">

    <!-- Barra verticale colorata -->
    <View
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="#2196F3"
        android:layout_marginEnd="8dp" />

    <!-- Contenuto del messaggio quotato -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewReplySenderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Mittente"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#2196F3" />

        <TextView
            android:id="@+id/textViewReplyContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Contenuto del messaggio originale..."
            android:textSize="14sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#666666" />
    </LinearLayout>

    <!-- Pulsante per chiudere la preview -->
    <ImageButton
        android:id="@+id/buttonCloseReply"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        android:contentDescription="Annulla risposta"
        android:padding="4dp" />

</LinearLayout>
