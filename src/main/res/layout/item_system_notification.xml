<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:id="@+id/notificationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="?attr/colorSurface">

        <!-- Icon + Title row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Indicatore notifica non letta (pallino rosso) -->
            <View
                android:id="@+id/unreadIndicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/circle_shape"
                android:backgroundTint="#FF5252"
                android:visibility="visible" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“¢"
                android:textSize="20sp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Indicatore URL (pallino blu) -->
            <View
                android:id="@+id/urlIndicator"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circle_shape"
                android:backgroundTint="?attr/colorPrimary"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/textViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="26dp"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/textViewTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="26dp"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorTertiary"
            android:alpha="0.7" />

        <!-- Swipe hint per link -->
        <TextView
            android:id="@+id/textViewSwipeHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="26dp"
            android:text="ðŸ‘ˆ Swipe a sinistra per aprire il link"
            android:textSize="11sp"
            android:textColor="?attr/colorPrimary"
            android:textStyle="italic"
            android:alpha="0.8"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>